/* pages/comments/comments.wxss */
.head{
  width: 100%;
  height: 44px;
  background-color: white;
  display: flex;
   box-shadow: 0 0 7px 0 rgba(126, 151, 168, 0.24);
  position: fixed;
  top: 0;
}
.tag{
  font-size: 14px;
  margin-left: 5%;
}
.tag>text{
  padding: 2px 15px;
  border-radius: 5px;
  line-height: 44px;
  border:1px solid rgba(153, 153, 153, 0.21);
}
.currentTag{
  background-color:  rgba(56, 56, 56, 0.9286);
  color: white;
}
.page{
  margin-top: 55px;
  font-size: 12px;
}
.list-item{
  width: 92%;
  background-color: white;
  height: auto;
  padding: 10px 5%;
  border-top: 1px solid #eef3f5;
  border-bottom: 1px solid #eef3f5;
  margin-top: 10px;
   box-shadow: 0 0 7px 0 rgba(126, 151, 168, 0.24);
}
.headImage{
  width: 100%;
  height: 100%;
  display: flex;
}
.headImage>image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.name{
  line-height: 50px;
  font-size: 14px;
  margin-left: 10px;
}
.content{
  width: 100%;
  height: auto;
  color: rgba(80, 80, 80, 1);
}
.text{
  width: 100%;
  margin: 10px 0px;
}
.content>image{
  width: 50px;
  height: 50px;
}