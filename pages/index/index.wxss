/**index.wxss**/
.body{
  padding-left: 1%;
  padding-right: 1%;
}
image{
  width: 100%;
}
.special-foods{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 57px; 
  width: 100%;
  text-align: center;
  background-color: rgba(248, 248, 248, 1);
  margin-top: 17px;
  margin-bottom: 17px;
  
}
.foods-title{
  width: 12%;
  height: 57px;
  line-height: 28px;
  padding: 0px 2%;
  background-color:rgba(245, 240, 240, 1);
  font-size: 1rem;
}
.hotpot{
  width: 8%;
  color: rgba(238, 159, 159, 1);
  border: 1px solid rgba(238, 159, 159, 1);
  font-size: 12px;
  line-height: 20px;
  margin:2px 1%;
  padding-left: 1%;
  padding-right: 1%;
  background-color: white;
}
.headTitle{
  font-size: 0.9rem;
  width: 55%;
  line-height: 30px;
  background-color: white;
  height: 30px;
}
.content{
  width: 55%;
  font-size:0.8rem;
  line-height: 25px;
  background-color: white;
  height: 27px;
}
.foods-image{
  width: 12%;
  height: 50px;
  padding-top:3px;
  padding-bottom: 4px;
  background-color: white;
}
/* 热销推荐 */
.hotSale{
  width: 100%;
  text-align: center;
  font-size: 1.2rem;
  height: 59px;
  line-height: 59px;
  border-top:1px solid rgba(80, 80, 80, 1);
  border-bottom:1px solid rgba(80, 80, 80, 1);
}
.listItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 128px;
  flex-wrap: wrap;
  margin-top: 10px;
  border-bottom:1px solid rgba(80, 80, 80, 1);
}
.listItem>image{
  width: 30%;
  height: 116px;
}
.goods-content{
  width: 70%;
  height: 128px;
}
.goods-title{
  font-size: 0.8rem;
  height: 30px;
  width: 100%;
  padding: 5px 5%;
}
.goods-category{
  font-size: 0.8rem;
  height: 30px;
  width: 100%;
  padding: 5px 5%;
}
.third-line{
  width: 100%;
  height: 40px;
  flex-direction: column;
  font-size: 0.8rem;
}
.price{
  width: 40%;
  height: 40px;
  display: inline-block;
  color: rgba(200, 74, 74, 1);
  margin-top: 20px;
  padding-left: 5%;
}
.num{
  width: 50%;
  height: 40px;
  display: inline-block;
  text-align: right;
}
.num>button{
  width: 20%;
  height: 20px;
  padding: 3%;
  margin: 0;
  display: inline-block;
  line-height: 12px;
  border: 1px solid rgba(200, 74, 74, 1); 
  background-color: white;
}
.num>input{
  width: 30px;
  display: inline-block;
  text-align: center;
}