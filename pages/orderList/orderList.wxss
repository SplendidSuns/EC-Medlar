/* pages/orderList/orderList.wxss */
@import '../shoppingcart/cart.wxss';
.tabbar{
  position: fixed;
  top: 0;
  font-size: 0.8rem;
  text-align: center;
  display: flex;
  width: 100%;
  height: 43px;
  line-height: 43px;
  border-top: 1px solid rgba(166, 166, 166, 0.21);
  border-bottom: 1px solid rgba(166, 166, 166, 0.21);
}
.tabbarItem{
  width: 20%;
}
.select{
  border-bottom: 2px solid rgba(248, 72, 72, 1);
  color: rgba(248, 72, 72, 1);
}
.orderList{
  margin-top: 44px;
  background-color: rgba(246, 246, 246, 1);
  padding-left: 2%;
  padding-right:2%;
  padding-top: 17px;
  height: auto;
}
.shopList{
  border: 1px solid rgba(128, 128, 128, 0.21);
  background-color: white;
  border-radius: 5px;
  margin-bottom: 17px;
}
.shopName{
  display: flex;
}
.storeName{
  width: 50%;
}
.orderStatus{
  width: 50%;
  text-align: right;
  color: rgba(248, 72, 72, 1);
}
.totalPrice{
  width: 98%;
  line-height: 34px;
  height: 34px;
  font-size: 0.8rem;
  text-align: right;
  padding-right: 2%;
  border-bottom: 1px solid rgba(128, 128, 128, 0.21);
}
.lastLine{
  width: 100%;
  display: flex;
  height: 54px;
}
.lastLine>button{
  margin-top: 10px;
  width: 30%;
  font-size: 0.8rem;
  height: 34px;
  line-height: 34px;
  border-radius: 16px;
  background-color: white;
  border: 1px solid rgba(128, 128, 128, 0.56);
}
.orderStatusBtn{
  border-color: rgba(248, 72, 72, 1);
  color: rgba(248, 72, 72, 1);
}