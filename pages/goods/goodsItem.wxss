/* pages/goods/goodsItem.wxss */
image{
  width: 100%;
}
.itemContent{
  width:100%;
  font-size: 0.8rem;
}
.listItem{
  width: 100%;
  height: 134px;
}
.firstLine{
  height: 50px;
  display: flex;
}
.price{
  width: 35%;
  padding: 10px 5%;
  color: red;
}
.countAfter{
  color: rgba(80, 80, 80, 1); 
  font-size: 0.6rem;
  padding-left: 5px;
  padding-right: 18%;
}
.countBefore{
  font-size: 0.6rem;
  color: rgba(80, 80, 80, 1); 
}
.share{
  width: 50%;
  text-align: right;
  color: rgba(80, 80, 80, 1); 
  margin-top: 10px;
}
.share>icon{
  font-size: 1.6rem;
}
.secondLine{
  width: 100%;
  height: 30px;
  padding-left: 5%;
  line-height: 30px;
  margin-top: 5px;
}
.thirdLine{
  width: 100%;
  display: flex;
  margin-top: 10px;
}
.thirdLine>view{
  width: 33%;
  padding-left: 5%;
  color: rgba(80, 80, 80, 1);
}
.tagCategory{
  width: 100%;
  border-top: 1px solid rgba(80, 80, 80, 1);
 color: rgba(80, 80, 80, 1);
}
.tagCategory>view{
   height: 59px;
  line-height: 59px;
  padding-left: 5%;
   border-bottom: 1px solid rgba(80, 80, 80, 1);
}
.tagCategory>view>icon{
  padding-left: 50%;
}
.comments{
  padding-left: 5%;
  padding-right: 5%;
  margin-top: 17px;
}
.comments-item{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
}
.comments-item>icon{
  padding-left: 10px;
  color: rgba(80, 80, 80, 1);
}
.headImage{
  width: 100%;
  height: 50px;
  display: flex;
  color: rgba(80, 80, 80, 1);
}
.headImage>image{
  width: 50px;
  height: 50px;
}
.headImage>view{
  line-height: 50px;
  height: 50px;
  margin-left: 5px;
}
.content{
  width: 100%;
  color: rgba(80, 80, 80, 1);
  margin-top: 10px;
}
.allComments{
  width: 100%;
  height: 30px;
  margin-top: 20px;
  text-align: center;
}
.allComments>button{
  width: 40%;
  font-size: 0.8rem;
  border-radius: 20px;
  border: 1px solid rgba(166, 166, 166, 1);
  background-color: white;
}
.goodsDetail{
  width: 100%;
  text-align: center;
  display: flex;
  margin-top: 40px;
}
.tag{
  width: 20%;
  height: 30px;
  font-size: 0.8rem;
  border-bottom: 2px solid rgba(166, 166, 166, 1);
}
.page{
  width: 100%;
  padding-left: 5%;
  padding-right: 5%;
  margin-top: 10px;
  font-size: 0.8rem;
  height: auto;
  margin-bottom: 54px;
}
.tabbar-bottom{
  width: 100%;
  display: flex;
  height: 44px;
  font-size: 0.6rem;
  text-align: center;
  border-top: 1px solid  rgba(166, 166, 166, 1);
  position: fixed;
  bottom: 0px;
  background-color: white;
}
.normal{
  width: 20%;
}
.buything{
  width: 30%;
}
.buything>button{
  font-size: 0.8rem;
  height: 44px;
  border: none;
  line-height: 44px;
  border-radius: 0;
  background-color: black;
  color: white;
}