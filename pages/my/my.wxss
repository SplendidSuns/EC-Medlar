/* pages/my/my.wxss */
.my-page{
  background-color: white;
}
.myInfo{
  height: 108px;
  padding-left: 5%;
  display: flex;
  font-size: 0.8rem;
  background-color: rgba(246, 246, 246, 1);
  padding-top: 20px;
}
image{
  width: 87px;
  height: 87px;
  border-radius: 50%;

}
.headInfo{
  width: 40%;
  height: 87px;
  padding-top: 20px;
  line-height: 30px;
  margin-left: 5%;
}
.name{
  font-weight: bold;
}
.allOrder{
  font-size: 0.8rem;
  display: flex;
  height: 45px;
  line-height: 45px;
  box-shadow:0px 1px 2px  #eef3f5;
}
.ordertxt{
  width: 50%;
  padding-left: 5%;
 
}
.seeAll{
  width: 50%;
  text-align: right;
  padding-right: 5%;
}
.orderStatus{
  display: flex;
  text-align: center;
  height: 80px;
  margin-top: 10px;
  padding-top: 20px;
  border-top: 1.3px solid  #eef3f5;
  border-bottom: 1.3px solid  #eef3f5;
}
.orderStatusItem{
  width: 25%;
  height: 80px;
 
}
.orderStatusItem>icon{
  width: 100%;
  height: 27px;
  font-size: 1.5rem;
}
.orderStatusItem>text{
  font-size: 0.8rem;
}
.myItem{
  height: 50px;
  line-height: 50px;
  border-bottom: 1.3px solid  #eef3f5;
  padding-left: 5%;
  font-size: 0.8rem;
}
.myItem>icon{
  width: 10%;
  font-size: 1.2rem;
}