/* pages/address/address.list.wxss */
.address-page{
  width: 100%;
  background-color: #eef3f5;
  padding-bottom:50px;
}
.address-item{
  width: 94%;
  height: 60px;
  display: flex;
  font-size: 12px;
  padding: 10px 3%;
  border-bottom: 1px solid #eef3f5;
  background-color: white;
}
.choose-address{
  width: 80%;
  height: 60px;
  display: flex;
  border-right: 1px solid #eef3f5;
}
.choose{
  width: 10%;
  line-height: 40px;
}
/* pages/shoppingcart/cart.wxss */

.shoppingcart-page {
 margin-bottom: 60px;
}
.shopList{
  margin-bottom: 12px;
}
.shopName {
  padding: 10px 5%;
  border-bottom: 1px solid  #eef3f5;
  border-top: 1px solid  #eef3f5;
  font-size: 0.8rem;
  background-color: white;
}

.shopItem {
  display: flex;
  flex-direction: column;
  height: 97px;
  flex-wrap: wrap;
  padding-top: 10px;
  padding-left: 2%;
  padding-right: 5%;
  border-bottom: 1.3px solid  #eef3f5;
  background-color: white;
}
.goods-price,.icon-gouwuche{
  color: rgba(248, 72, 72, 1);
}
.shopItem>checkbox {
  width: 10%;
  line-height: 87px;
  font-size: 1rem;
  padding-left: 3%;
  
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: rgba(248, 72, 72, 1);
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
  margin-top: -4rpx;
  border: 1rpx solid  #eef3f5;
}
.address-info{
  width: 90%;
  height: 60px;
  padding-left: 2%;
}
.contact-info{
  width: 100%;
  display: flex;
  height: 30px;
  font-size: 14px;
}
.name{
  margin-right: 2%;
}
.phone{
}
.flag{
  width: 40px;
  height: 20px;
  font-size: 10px;
  line-height: 20px;
  text-align: center;
  background-color: red;
  border-radius: 10px;
  color: white;
  margin-left: 3%;
}
.address{
  width: 100%;
  height: 30px;
}
.edit{
  width: 10%;
  line-height: 60px;
  font-size: 14px;
  text-align: right;
  margin-left: 5%;
}
.info{
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: gray;
  height: 30px;
  line-height: 30px;
}
.footer{
  position: fixed;
  bottom:0;
  height: 48px;
  width: 100%;
  border-top: 1px solid #eef3f5;
  padding-top: 5px;
  background-color: white;
}
.footer>button{
width: 80%;
border-radius: 16px;
height: 40px;
background-color: rgba(248, 72, 72, 1);
color: white;
line-height: 40px;
font-size: 14px;
}