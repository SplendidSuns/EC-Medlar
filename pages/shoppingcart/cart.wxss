/* pages/shoppingcart/cart.wxss */

.shoppingcart-page {
  background-color: rgba(245, 245, 245, 1);
}

.shopName {
  margin: 0px 2%;
  padding: 10px 3%;
  border-bottom: 1px solid rgba(153, 153, 153, 0.21);
  border-top: 1px solid rgba(153, 153, 153, 0.21);
  font-size: 0.8rem;
  background-color: white;
}

.shopItem {
  display: flex;
  flex-direction: column;
  height: 97px;
  flex-wrap: wrap;
  padding-top: 10px;
  margin-left: 2%;
  margin-right: 2%;
  padding-right: 3%;
  border-bottom: 1.3px solid rgba(153, 153, 153, 0.21);
  background-color: white;
}

.shopItem>image {
  width: 30%;
  height: 87px;
}
.goods-price,.icon-gouwuche{
  color: rgba(248, 72, 72, 1);
}
.shopItem>checkbox {
  width: 10%;
  line-height: 87px;
  font-size: 1rem;
  padding-left: 3%;
  
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: rgba(248, 72, 72, 1);
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
  margin-top: -4rpx;
  border: 1rpx solid rgba(153, 153, 153, 0.21);
}

.goods-content {
  width: 60%;
  height: 87px;
}

.goods-title {
  font-size: 0.8rem;
  height: 20px;
  width: 100%;
  padding: 5px 5%;
}

.goods-category {
  font-size: 0.8rem;
  height: 30px;
  width: 100%;
  padding: 0px 5%;
}

.third-line {
  width: 100%;
  height: 20px;
  flex-direction: column;
  font-size: 0.8rem;
}

.price {
  width: 40%;
  height: 20px;
  display: inline-block;
  color: rgba(200, 74, 74, 1);
  padding-left: 5%;
}

.num {
  width: 50%;
  height: 22px;
  display: inline-block;
  text-align: right;
}

.num>button {
 height: 50rpx;
  width: 50rpx;
  padding: 3%;
  margin: 0;
  border-radius: 50%;
  display: inline-block;
  line-height: 12px;
  border: 1px solid rgba(200, 74, 74, 1);
  background-color: white;
}

.num>input {
  width: 30px;
  display: inline-block;
  text-align: center;
}

.num>button::after {
  border: none;
}

/*猜你喜欢 */

.showLike {
  background-color: rgba(245, 245, 245, 1);
  margin-bottom: 44px;
  margin-top: 10px;
}

.likeList {
  width: 96%;
  display: flex;
  font-size: 0.6rem;
  margin: 5px 2%;
}

.leftItem {
  width: 50%;
  background-color: white;
  border: 1px solid rgba(245, 245, 245, 1);
}

.leftItem>image {
  width: 96%;
  height: 140px;
  padding: 5px 2%;
}

.leftItem>view {
  text-align: left;
  padding-left: 5%;
}

.rightItem {
  width: 50%;
  text-align: right;
  background-color: white;
  border: 1px solid rgba(245, 245, 245, 1);
}

.rightItem>image {
  width: 96%;
  height: 140px;
  padding: 5px 2%;
}

.rightItem>view {
  text-align: left;
  padding-left: 5%;
}

.thirdLine {
  display: flex;
  width: 100%;
  height: 30px;
  line-height: 30px;
  color: rgba(153, 153, 153, 1);
}

.thirdLine>icon {
  text-align: right;
  width: 30%;
  line-height: 20px;
}

.thirdLine>view {
  width: 60%;
}

.tabbar {
  width: 100%;
  height: 44px;
  font-size: 0.8rem;
  position: fixed;
  bottom: 0px;
  background-color: white;
  line-height: 44px;
}

.chooseAll {
  width: 100%;
  display: flex;
  height: 44px;
  
}

.chooseAll>checkbox {
  width: 20%;
  padding-left: 5%;
   border-top: 1px solid rgba(204, 204, 204, 1);
}

.totalPrice {
  width: 40%;
  text-align: right;
  padding-right: 5%;
   border-top: 1px solid rgba(204, 204, 204, 1);
}

.totalPrice>view {
  width: 100%;
  line-height: 22px;
}

.chooseAll>button {
  width: 40%;
  font-size: 0.8rem;
  color: white;
  background-color: rgba(248, 72, 72, 1);
  margin: 0px;
  height: 44px;
  border: none;
  border-radius: 0px;
  line-height: 44px;
}
button::after{
  border: none;
}
