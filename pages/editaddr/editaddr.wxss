}
/*radio默认样式重置*/
radio {
      box-sizing: border-box;
      background: none;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
}
 
radio .wx-radio-input {
      margin-right: 15rpx;
      position: absolute;
      width: 100%;
      height: 100%;
      top:0;
      left:0;
      background: none;
      border-radius: 10px;
      box-sizing: border-box;
      border:1px solid #eef3f5;
}
 
radio .wx-radio-input.wx-radio-input-checked {
      background-color:transparent;
      border-color:#FF2150;
      overflow: hidden;
      box-sizing: border-box;
}
 
radio .wx-radio-input.wx-radio-input-checked::before {
      font-size:0rpx;
      top:auto;
      left:auto;
      right:-4rpx;
      bottom:-4rpx;
      transform:translate(0, 0) scale(1);
      -webkit-transform:translate(0, 0) scale(1);
}
.radio_checked{
  background-color: rgba(248, 72, 72, 1);
  color: white;
  display: block;
  padding:0 24rpx;
  height: 40rpx;
  line-height: 40rpx;
   border-radius: 10px;
}