/* components/sort/sort.wxss */
@import "/components/iconfont.wxss";

.sort {
  display: flex;
  font-size: 14px;
  text-align: center;
   box-shadow:0px 2px 2px #eef3f5;
   height: 44px;
}

.sort-list {
  width: 25%;
}

.list-wrapper {
  position: relative;
  display: inline-block;
  height: 1.75em;
  width: 1em;
}

.sort-icon {
  position: absolute;
  left: 0;
}

.icon-triangle-arrow-down {
  bottom: -8px;
}

.icon-triangle-arrow-up {
  top: 0;
}
.icon-shaixuan2{
   top: 5px;
}
.animation{
   background: rgba(0,0,0,0.2); 
  z-index: 999;
  float: left;
 right: -100vh;   /* 动画初始前向右移100vh */
  width: 100%;
  height: 100%;
}
.animation-content{
  width: 60%;
  height: 100%;
  background: #fff;
  position: absolute;
  right: 0;
}
.pricezone{
  width: 100%;
}
.pztitle{
  width: 100%;
  height: 20px;
  padding-left: 5%;
}
.inputzone{
  width: 100%;
  display: flex;
  padding-left: 3%;
}
.inputzone>input{
  width: 40%;
  font-size: 12px;
  padding-left: 5px;
  border-radius: 3px;
  height: 30px;
  text-align: center;
}