/**index.wxss**/
.body {
  padding-left: 1%;
  padding-right: 1%;
}
.category{
  width: 100%;
  display: flex;
  height: 40px;
  position: fixed;
  top: 0px;
  z-index: 999;
}
.icon-mulu1{
width: 10%;
line-height: 40px;
text-align: right;
font-size: 1.4rem;
color:rgba(0, 0, 0, 1);
}
#i-advanced-search {
  width:100%;
  border-radius: 18px;
  height: 30px;
  border: 1px solid gainsboro;
  font-size: 0.8rem;
  background-color: rgba(255, 255, 255,1); 
}


.search_input {
  width: 88%;
  margin-top: 5px;
  display: flex;
  text-align: left;
}

.icon-sousuo {
  position: relative;
  left: 25px;
  top: -1px;
  color: rgba(153, 153, 153, 1);
}
.icon-cancel {
  position: relative;
  right: 25px;
  top: -1px;
  color:rgba(153, 153, 153, 1);
  z-index: 999;
}

image {
  width: 100%;
  height: 157px;
}
image:after{
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    background-color: rgba(238, 238, 238, 0.8);
    opacity: 0.2;
    z-index: 1;
    width: 100%;
    height: 157px;
}

.special-foods {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  height: 57px;
  width: 100%;
  text-align: center;
  background-color: rgba(255, 255, 255, 1);
  margin-top: 17px;
  margin-bottom: 17px;
  padding: 10px 0px;
  box-shadow:0px 8px 8px rgba(128, 128, 128, 0.63);
}

.foods-title {
  width: 12%;
  height: 57px;
  line-height: 28px;
  padding: 0px 2%;
  background-color: rgba(245, 240, 240, 1);
  font-size: 1rem;
}

.hotpot {
  width: 8%;
  color: rgba(238, 159, 159, 1);
  border: 1px solid rgba(238, 159, 159, 1);
  font-size: 12px;
  line-height: 20px;
  margin: 2px 1%;
  padding-left: 1%;
  padding-right: 1%;
  background-color: white;
}

.headTitle {
  font-size: 0.9rem;
  width: 55%;
  line-height: 30px;
  background-color: white;
  height: 30px;
}

.content {
  width: 55%;
  font-size: 0.8rem;
  line-height: 25px;
  background-color: white;
  height: 27px;
}

.foods-image {
  width: 12%;
  height: 50px;
  padding-top: 3px;
  padding-bottom: 4px;
  background-color: white;
}

/* 热销推荐 */

.hotSale {
  width: 100%;
  text-align: center;
  font-size: 1.2rem;
  height: 59px;
  font-weight: bold;
  color: rgba(248, 72, 72, 1);
  line-height: 59px;
  border-top: rgba(128, 128, 128, 0.21) solid 1px;
  border-bottom: rgba(128, 128, 128, 0.21) solid 1px;
}

.listItem {
  display: flex;
  flex-direction: column;
  height: 128px;
  flex-wrap: wrap;
  border-bottom:rgba(128, 128, 128, 0.21) solid 1px;
  padding: 10px 5px;
}

.listItem>image {
  width: 30%;
  height: 116px;
  margin-top: 5px;
}

.goods-content {
  width: 70%;
  height: 128px;
  margin-top: 3px;
}

.goods-title {
  font-size: 0.8rem;
  height: 30px;
  width: 100%;
  padding: 5px 5%;
}

.goods-category {
  font-size: 0.8rem;
  height: 30px;
  width: 100%;
  padding: 5px 5%;
}

.third-line {
  width: 100%;
  height: 40px;
  flex-direction: column;
  font-size: 0.8rem;
}

.price {
  width: 40%;
  height: 40px;
  display: inline-block;
  color: rgba(248, 72, 72, 1);
  margin-top: 20px;
  padding-left: 5%;
}

.num {
  width: 50%;
  height: 40px;
  display: inline-block;
  text-align: right;
}

.num>button {
  height: 50rpx;
  width: 50rpx;
  padding: 3%;
  margin: 0;
  border-radius: 50%;
  display: inline-block;
  line-height: 12px;
  border: 1px solid rgba(200, 74, 74, 1);
  background-color: white;
}
.num>button::after{
   border:none;
}

.num>input {
  width: 30px;
  display: inline-block;
  padding: 0px;
  text-align: center;
  border: none;
}
